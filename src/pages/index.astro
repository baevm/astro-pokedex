---
import ThemeButton from '../components/common/ThemeButton'
import RecentSearch from '../components/SearchPage/RecentSearch'
import Search from '../components/SearchPage/Search.astro'
import Layout from '../layouts/Layout.astro'
---

<Layout title={'Pokedex'}>
  <div class='w-screen h-screen flex px-8 flex-col items-center justify-center bg-bg-color overflow-y-auto'>
    <div class='absolute top-4 right-8'>
      <ThemeButton client:idle />
    </div>
    <div class='mb-64 max-w-3xl w-full flex flex-col items-center justify-center'>
      <img class='mb-12' src={'/pokemon_logo.png'} width='320' height='118' alt='pokemon logo' />
      <Search />
      <RecentSearch client:idle />
    </div>
  </div>
</Layout>
