---
import Layout from '../layouts/Layout.astro';

const pokemons = await fetch('https://pokeapi.co/api/v2/pokemon?limit=20&offset=0').then((res) => res.json())


---

<Layout title={'Pokedex'}>
  <div class='min-w-screen min-h-screen bg-[#414141]'>
    {
      pokemons.results.map((pokemon: any) => (
        <div class='flex flex-col items-center justify-center'>
          <a class='text-white' href={`/${pokemon.name}`}>{pokemon.name}</a>
        </div>
      ))
    }
  </div>
</Layout>
